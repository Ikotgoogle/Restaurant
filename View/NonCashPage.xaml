<UserControl x:Class="Restaurant.View.NonCashPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Restaurant.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="LightBlue">
        <StackPanel Margin="20">
            <Label Content="БЕЗНАЛИЧНЫЕ" FontSize="40" FontWeight="Medium" HorizontalAlignment="Center"/>
            <DockPanel HorizontalAlignment="Center">
                <Label Content="Столик №" FontSize="20" FontWeight="Medium"/>
                <TextBlock Text="{Binding TableNum}" FontSize="20" FontWeight="Medium"/>
            </DockPanel>

            <Label Content="{Binding TableNum}"/>
            <DockPanel>
                <Label Content="ИТОГО: "/>
                <TextBlock Text="{Binding Bill}"/>
            </DockPanel>
                
        </StackPanel>
    </Grid>
</UserControl>
